{
  "name": "Sonar Desktop Capture App",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "128": "images/sonarFavicon.svg"
  },
  "app": {
    "background": {
      "page": "background.html"
    }
  },
  "permissions": [
    "desktopCapture",
    "audioCapture",
    "unlimitedStorage",
    "alwaysOnTopWindows",
    "storage"
  ],
  "externally_connectable": {
    "matches": ["*://*.asksonar.com/*", "*://localhost/*"]
  }
}
