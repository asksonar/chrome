{
  "name": "Sonar Desktop Capture App",
  "version": "2",
  "manifest_version": 2,
  "icons": {
    "16": "cow.png",
    "128": "cow.png"
  },
  "app": {
    "background": {
      "page": "background.html"
    }
  },
  "permissions": [
    "desktopCapture",
    "audioCapture",
    /*"permissions",*/
    "unlimitedStorage",
    "alwaysOnTopWindows",
    "storage"/*,
    {"fileSystem": ["write", "retainEntries", "directory"]}*/
  ],
  "externally_connectable": {
    "matches": ["*://*.asksonar.com/*", "*://localhost/*"]
  }
}
