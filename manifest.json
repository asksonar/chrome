{
  "name": "Sonar Desktop Capture App",
  "version": "1.6",
  "manifest_version": 2,
  "icons": {
    "128": "images/sonar_icon.png"
  },
  "app": {
    "background": {
      "page": "background.html"
    }
  },
  "permissions": [
    "desktopCapture",
    "audioCapture",
    "unlimitedStorage",
    "alwaysOnTopWindows",
    "storage"
  ],
  "externally_connectable": {
    "matches": ["*://*.asksonar.com/*", "*://localhost/*"]
  },
  "platforms": [
    {
      "nacl_arch": "arm",
      "sub_package_path": "_platform_specific/arm/"
    },
    {
      "nacl_arch": "x86-32",
      "sub_package_path": "_platform_specific/x86-32/"
    },
    {
      "nacl_arch": "x86-64",
      "sub_package_path": "_platform_specific/x86-64/"
    }
  ]
}
